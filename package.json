{
  "private": true,
  "name": "@maiertech/capture",
  "version": "0.0.0",
  "description": "Capture API to create screenshots of websites.",
  "author": "Thilo Maier <git@maier.asia>",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "engines": {
    "node": "^8.10"
  },
  "scripts": {
    "start": "now dev",
    "purge": "rm -rf ./node_modules",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick",
    "test": "jest",
    "coverage": "jest --collect-coverage",
    "inspect": "node --inspect-brk node_modules/.bin/jest"
  },
  "dependencies": {
    "axios": "0.19.0",
    "chrome-aws-lambda": "1.20.1",
    "puppeteer-core": "1.20.0",
    "validator": "11.1.0"
  },
  "devDependencies": {
    "eslint": "6.5.1",
    "eslint-plugin-shopify": "30.0.1",
    "husky": "3.0.9",
    "iltorb": "2.4.3",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "now": "16.3.1",
    "prettier": "1.18.2",
    "pretty-quick": "2.0.0",
    "puppeteer": "1.20.0"
  }
}
